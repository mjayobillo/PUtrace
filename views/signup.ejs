<%- include('_header') %>
<section class="card narrow">
  <div class="center-text" style="margin-bottom:1.5rem;">
    <h2>Create Your Account</h2>
    <p style="color:#888;font-size:0.9rem;">Start protecting your belongings today</p>
  </div>
  <div class="school-email-note">ðŸŽ“ A <strong>@panpacificu.edu.ph</strong> email is required to register.</div>
  <form method="post" action="/signup">
    <label>Full name <input name="full_name" required placeholder="Juan dela Cruz" /></label>
    <label>Email <input type="email" name="email" required placeholder="you@panpacificu.edu.ph" /></label>
    <label>Password <small style="font-weight:400;color:#aaa;">(min 8 characters)</small>
      <div class="password-wrap">
        <input type="password" name="password" id="signupPassword" required minlength="8" placeholder="Create a strong password" />
        <span class="pw-toggle" onclick="togglePassword('signupPassword', this)" onkeydown="if(event.key==='Enter'||event.key===' '){event.preventDefault();togglePassword('signupPassword', this)}" title="Show password" role="button" tabindex="0">Show</span>
      </div>
    </label>
    <label>Confirm password
      <div class="password-wrap">
        <input type="password" name="confirm_password" id="signupConfirmPassword" required minlength="8" placeholder="Re-enter your password" />
        <span class="pw-toggle" onclick="togglePassword('signupConfirmPassword', this)" onkeydown="if(event.key==='Enter'||event.key===' '){event.preventDefault();togglePassword('signupConfirmPassword', this)}" title="Show password" role="button" tabindex="0">Show</span>
      </div>
    </label>
    <button type="submit">Create Account</button>
  </form>
  <p class="center-text" style="margin-top:1rem;font-size:0.9rem;color:#888;">Already have an account? <a href="/login">Sign in</a></p>
</section>
<%- include('_footer') %>
