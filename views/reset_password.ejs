<%- include('_header') %>
<section class="card narrow">
  <div class="center-text" style="margin-bottom:1.5rem;">
    <h2>Reset Password</h2>
    <p style="color:#888;font-size:0.9rem;">Set a new password for your account.</p>
  </div>
  <form method="post" action="/reset-password/<%= token %>">
    <label>New password <small style="font-weight:400;color:#aaa;">(min 8 characters)</small>
      <div class="password-wrap">
        <input type="password" name="new_password" id="resetNewPassword" required minlength="8" />
        <span class="pw-toggle" onclick="togglePassword('resetNewPassword', this)" onkeydown="if(event.key==='Enter'||event.key===' '){event.preventDefault();togglePassword('resetNewPassword', this)}" title="Show password" role="button" tabindex="0"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg></span>
      </div>
    </label>
    <label>Confirm new password
      <div class="password-wrap">
        <input type="password" name="confirm_new_password" id="resetConfirmPassword" required minlength="8" />
        <span class="pw-toggle" onclick="togglePassword('resetConfirmPassword', this)" onkeydown="if(event.key==='Enter'||event.key===' '){event.preventDefault();togglePassword('resetConfirmPassword', this)}" title="Show password" role="button" tabindex="0"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg></span>
      </div>
    </label>
    <button type="submit">Update Password</button>
  </form>
</section>
<%- include('_footer') %>
